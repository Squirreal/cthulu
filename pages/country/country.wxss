/* pages/country/country.wxss */
.country-info {
    padding: 40rpx 0rpx;
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: flex-start;
}

.flag {
    width: 120rpx;
    height: 120rpx;
    border: 0px;
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #fff;
    background-size: cover;
    box-shadow: 0 0 4px 0 #aaa;
    border-radius: 60rpx;
    margin-right: 48rpx;
    margin-left: 48rpx;
}

.country-name {
    font-size: 16px;
    font-weight: 700;
    color: #000;
}

.country-meta {
    display: flex;
    margin-top: 12rpx;
    font-size: 20rpx;
    color: #666;
    letter-spacing: 0;
}

.swiper {
    height: 424rpx;
}

.swiper .swiper-container {
    height: 100%;
}

.swiper-item {
    height: 100%;
    position: relative;
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #fff;
    background-size: cover;
}

.swiper-item .icon-play {
    width: 86rpx;
    height: 86rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -43rpx;
    margin-left: -43rpx;
}

.section {
    padding-top: 40rpx;
}
.section .section-title {
    font-size: 16px;
    color: #000000;
    letter-spacing: 0;
    font-weight: 700;
    padding-left: 28rpx;
}
.section .section-body {
    padding-top: 24rpx;
}
.section .scroll-box {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    white-space: nowrap;
}
.section .hot-city {
    width: 100%;
    height: 100rpx;
}
.section .hot-city .city-item {
    width: 168rpx;
    height: 100%;
    border-radius: 8px;
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #fff;
    background-size: cover;
    display: inline-block;
    overflow:hidden;
    border:0px;
    margin-right: 24rpx;
}
.section .hot-city .city-item:first-child {
    margin-left: 28rpx;
}
.section .hot-city .city-item:active {
    opacity: 0.8;
}
.section .hot-city .city-name {
    display: block;
    width: 100%;
    height: 100%;
    white-space: nowrap;
    line-height: 100rpx;
    font-size: 14px;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    background: rgba(0,0,0,0.20);
    text-overflow: ellipsis;
    overflow: hidden;
}
.section .economy-item {
    padding: 32rpx 28rpx;
    border-top: 1px solid #EDEDED;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
    color: #333333;
    letter-spacing: 0;
}

.section .economy-item:last-child {
    border-bottom: 1px solid #EDEDED;
}

.section .economy-item text:last-child {
    width: 60%;
    text-align: right;
}

.section.feature .section-body {
    padding-left: 28rpx;
    padding-right: 28rpx;
    font-size: 12px;
}

.section.buildings .section-body {
    padding-left: 28rpx;
    padding-right:28rpx;
    justify-content: space-between;
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
}
.section .building-item {
    width: 48%;
    margin-bottom: 32rpx;
    background:#FFFFFF;
    box-shadow: 0 0 4px 0 rgba(0,0,0,0.20);
}
.section .building-item .building-cover {
    width: 100%;
    height: 240rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #FFFFFF;
    background-size: cover;
    position: relative;
}
.section .building-item .building-tag {
    font-size:10px;
    color: #FFF;
    background: #A1887F;
    padding:4rpx 6rpx;
    border-radius: 4rpx;
    position: absolute;
    right: 8rpx;
    bottom: 8rpx;
}
.section .building-item .building-info {
    padding: 20rpx;
}
.section .building-item .building-name {
    font-weight: 700;
    font-size: 14px;
    color: #353535;
    letter-spacing: 0;
    line-height: 16px;
}
.section .building-item .building-location {
    margin-top: 24rpx;
    font-size: 12px;
    color: #999999;
    letter-spacing: 0;
    line-height: 12px;
}
.section .building-item .building-price {
    margin-top: 8rpx;
    font-size: 12px;
    color: #6A6362;
    letter-spacing: 0;
    line-height: 12px;
    font-weight: 700;
}
.section .building-item .building-price .sp {
    font-size: 10px;
    margin-left: 4rpx;
    font-weight: 400;
}
.section .building-item .btn {
    width: 100%;
    font-size: 14px;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    font-weight: 400;
    margin-top: 24rpx;
    padding: 0px;
    height: 56rpx;
    min-height: 0rpx;
    line-height: 56rpx;
    background: #A1887F;
    border-radius: 12rpx;
}
.section .building-item .btn:active {
    opacity: 0.8;
}