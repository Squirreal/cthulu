/* pages/city/buildings.wxss */
.section.buildings .section-body {
    padding-left: 28rpx;
    padding-right:28rpx;
    padding-top: 32rpx;
    justify-content: space-between;
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
}
.section .building-item {
    width: 48%;
    margin-bottom: 32rpx;
    background:#FFFFFF;
    box-shadow: 0 0 4px 0 rgba(0,0,0,0.20);
}
.section .building-item .building-cover {
    width: 100%;
    height: 240rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #FFFFFF;
    background-size: cover;
    position: relative;
}
.section .building-item .building-tag {
    font-size:10px;
    color: #FFF;
    background: #A1887F;
    padding:4rpx 6rpx;
    border-radius: 4rpx;
    position: absolute;
    right: 8rpx;
    bottom: 8rpx;
}
.section .building-item .building-info {
    padding: 20rpx;
}
.section .building-item .building-name {
    font-weight: 700;
    font-size: 24rpx;
    color: #353535;
    letter-spacing: 0;
    line-height: 16px;
}
.section .building-item .building-location {
    margin-top: 24rpx;
    font-size: 12px;
    color: #999999;
    letter-spacing: 0;
    line-height: 12px;
}
.section .building-item .building-price {
    margin-top: 8rpx;
    font-size: 12px;
    color: #6A6362;
    letter-spacing: 0;
    line-height: 12px;
    font-weight: 700;
}
.section .building-item .btn {
    width: 100%;
    font-size: 24rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    font-weight: 400;
    margin-top: 24rpx;
    padding: 0px;
    height: 56rpx;
    min-height: 0rpx;
    line-height: 56rpx;
    background: #A1887F;
    border-radius: 12rpx;
}
.section .building-item .btn:active {
    opacity: 0.8;
}